<Window x:Class="Grids_Columns_and_Rows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Grids_Columns_and_Rows"
        mc:Ignorable="d"      
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="grid_window" d:IsLocked="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>         
        </Grid.ColumnDefinitions>
        <Button x:Name="btn" Content="Przycisk" HorizontalAlignment="Center" Width="100" Height="30" d:IsLocked="True"/>

        <StackPanel d:IsLocked="True">
            <StackPanel x:Name="pnl1" Width="500" VerticalAlignment="Center" HorizontalAlignment="Center" d:IsLocked="True"/>

        </StackPanel>

    </Grid>

    </Window>
